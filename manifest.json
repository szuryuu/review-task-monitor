{
  "manifest_version": 3,
  "name": "Review Task Monitor",
  "version": "1.0",
  "description": "A simple description of my extension.",
  "icons": {
    "16": "assets/icons/eyes.png",
    "48": "assets/icons/eyes.png",
    "128": "assets/icons/eyes.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/eyes.png",
      "48": "assets/icons/eyes.png",
      "128": "assets/icons/eyes.png"
    },
    "default_title": "Review Task Monitor"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms",
    "scripting"
  ],
  "host_permissions": ["https://*.example.com/*", "https://dicoding.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.example.com/*", "https://dicoding.com/*"],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}
